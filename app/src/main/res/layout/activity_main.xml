<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context=".MainActivity">

    <android.support.v7.widget.AppCompatButton
            android:id="@+id/recode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="录音"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />

    <android.support.v7.widget.AppCompatButton
            android:id="@+id/stopRecode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="停止录音"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recode"
    />

    <android.support.v7.widget.AppCompatButton
            android:id="@+id/play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/recode"
            app:layout_constraintTop_toTopOf="parent"
            android:text="播放"
    />

    <android.support.v7.widget.AppCompatButton
            android:id="@+id/stopPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="停止播放"
            app:layout_constraintStart_toEndOf="@+id/stopRecode"
            app:layout_constraintTop_toTopOf="@+id/stopRecode"
    />
</android.support.constraint.ConstraintLayout>